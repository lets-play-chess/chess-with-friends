<div class="container">
        <h1 class="font-effect-shadow-multiple"> Let's play Chess!</h1>
        <div class = "row">
            <div class = "col-7 mt-5" id="form">
                <form id="username-form">
                    <div class="card">
                        <h2 id="username">{{username}}</h2>
                        <!-- <h2></h2> -->
                        <h2 id ="totgam">Total Games Played:</h2>
                        <h3 id="ngames-played">{{ngames}}</h3>
                        <!--  -->
                        <table class="table text-center mb-5">
                            <thead>
                            <tr class="top">
                                <th scope="col"><h5>Wins: </h5></th>
                                <th scope="col"><h5>Loses: </h5></th>
                                <th scope="col"><h5>Ties: </h5></th>
                                <th scope="col"><h5>Win/loss: </h5></th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr class="bottom">
                                <td>{{wins}}</td>
                                <td>{{losses}}</td>
                                <td>{{ties}}</td>
                                <td>{{winloss}}</td>
                            </tr>
                            </tbody>
                        </table>

                    </div>
                </form>
                <button type="submit" class="btn btn-primary btn-lg btn-block mt-3" id="play-btn"> PLAY GAME</button>
            </div>
            <div class="col-1"></div>
            <div class="col-4 rounded mt-5" id="friends-box">
                <ul class="list-group mt-3 mr-2 ml-2 rounded">
                    {{#each friend}} 
                            <li class="list-group-item mb-3 list-group-item-action" class="friends-list">{{this}}</li>
                    {{/each}}
                </ul>
                <button type="button" class="btn btn-primary btn-lg btn-block" data-toggle="modal" data-target="#addFriendModal" id="open-modal"> Add Friend </button>
            </div>
        </div>
        
    </div>

    <!-- Modal -->
    <div class="modal fade" id="addFriendModal" tabindex="-1" role="dialog" aria-labelledby="addFriendModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
        <div class="modal-content" id="modal-cont">
            <div class="modal-header">
            <h5 class="modal-title" id="addFriendModalLabel"> Add a Friend </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            </div>
            <div class="modal-body">
                <form id="login-form">
                    
                    <label for="emaillogin" class="form-label">Enter your friend's email</label>
                    <input type="text" class="form-control" id="email-login" placeholder = "Email">
                    <button type="submit" class="btn btn-primary btn-block" id="add-friend-btn">Add Friend</button>
                    <p id="frs">Friend Request Sent!</p>
                </form>
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
        </div>
        </div>
        
        <!-- Button notif modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#notifModal"> Notifications <span class="badge badge-pill badge-danger" id="numBadge"> </span></button>
    <!-- Modal -->
    <div class="modal fade" id="notifModal" tabindex="-1" role="dialog" aria-labelledby="notifModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="notifModalLabel"> Notifications </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            </div>
            <div class="modal-body">
                <form id="notif-form">
                    <h3>Friend Request</h3>
                    <ul class="list-group" id="friend-request-list">
                        
                    </ul>
                    <hr>
                    <h3>Game Invite</h3>
                    <ul class="list-group" id="game-invite-list">
                        
                    </ul>
                </form>
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
        </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/user.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>