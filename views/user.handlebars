<div class ="container">
        <div class = "row">
            <div class="col-8">
                    <div class="card">
                        <h1>{{username}}</h1>
                        <h3>Total Games Played: {{games}}</h3>
                        <h5>Wins: {{wins}}</h5>
                        <p>Loses: {{loses}}</p>
                        <p>Ties: {{ties}}</p>
                        <p>Win/loss: {{winloss}}</p>
                        <button id="play-btn">PLAY GAME</button>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#notificationModal" id="open-notification-modal">
                            Notifications
                        </button>
                    </div>
            </div>
    
            <div class="col-4">
                <ul id="friends-list">
                {{#each friend}}
                <li>{{friend_username}}</li>
                {{/each}}
                </ul>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addFriendModal" id="open-modal">
                    Add Friend
                </button>
            </div>
        </div>
    </div>
    <!-- Add Friend Modal -->
    <div class="modal fade" id="addFriendModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add a Friend</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p class="not-frs">Enter your friend's email:</p>
                    <input class="not-frs" type="text" id="friend-email" value="friends email">
                    <button type="button" class="btn btn-primary not-frs" id="add-friend-btn">Add Friend</button>
                    <p id="frs">Friend Request Sent!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Notification Modal -->
    <div class="modal fade" id="notificationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Notifications</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="friend-request-div">
                        <h4>Friend Requests</h4>
                        <ul id="friend-request-list"></ul>
                    </div>
                    <div id="game-invite-div">
                        <h4>Game Invites</h4>
                        <ul id="game-invite-list"></ul>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
